<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

      <ScrollView
        android:id="@+id/scrollview_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#ffeaeaea"
             android:orientation="vertical" >
        
             <android.support.v4.view.ViewPager
             android:id="@+id/pager"
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:layout_marginBottom="5dp" />

            	<LinearLayout
            	    android:id="@+id/main"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_margin="5dp"
            		android:background="@android:color/white"
            		android:orientation="vertical" >
            		<TextView
                		android:id="@+id/main_text"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_margin="5dp"
		                android:text="Características Principales"
		                android:textColor="@color/SteelBlue"
		                android:textStyle="bold" />
            		
            		<View android:layout_height="1dp"
				        android:layout_width="match_parent"
				        android:background="#90909090"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginLeft="2dp"
				        android:layout_marginRight="10dp"
				        android:id="@+id/separator2" />

            		<TextView
            		    android:id="@+id/main_desc"
            		    android:layout_width="wrap_content"
            		    android:layout_height="wrap_content"
            		    android:layout_margin="5dp"
            		    android:text="Descripcion_principal"
            		    android:textStyle="normal" />
            	    
            	    <TextView
		                android:id="@+id/price"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_margin="5dp"
		                android:text="Precio"
		                android:textColor="@color/SteelBlue"
		                android:textStyle="bold" />
          
				</LinearLayout>

            	<LinearLayout
            	android:id="@+id/map_section"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_margin="5dp"
            	android:background="@android:color/white"
            	android:orientation="vertical" >  
            		           
                    <TextView
                		android:id="@+id/map_text"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_margin="5dp"
		                android:text="Ubicación"
		                android:textColor="@color/SteelBlue"
		                android:textStyle="bold" />
            		
            		<View android:layout_height="1dp"
				        android:layout_width="match_parent"
				        android:background="#90909090"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginLeft="2dp"
				        android:layout_marginRight="10dp"
				        android:id="@+id/separator3" />
            		
		           <ImageButton
		                android:id="@+id/locationMapSnapshot"
		                android:layout_margin="2dp"
		                android:layout_width="match_parent"
		                android:layout_height="145dp" />
           </LinearLayout>
            	<LinearLayout
            	    android:id="@+id/detail_section"
            		android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:layout_margin="5dp"
            		android:background="@android:color/white"
            		android:orientation="vertical" >
            	    
            	    <TextView
                		android:id="@+id/detail_section_text"
                		android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:layout_margin="5dp"
		                android:text="Detalles"
		                android:textColor="@color/SteelBlue"
		                android:textStyle="bold" />
            		
            		<View android:layout_height="1dp"
				        android:layout_width="match_parent"
				        android:background="#90909090"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginLeft="2dp"
				        android:layout_marginRight="10dp"
				        android:id="@+id/separator4" />
            		
            	      <TextView
		                 android:id="@+id/sec_text"
		                 android:layout_width="wrap_content"
		                 android:layout_height="25dp"
		                 android:text="Secondary Text"
		                 android:textSize="14sp"
		                 android:textStyle="bold" />
             
            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="superficie"
                android:textStyle="normal" />
                                         
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="antiguedad"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expensas"
                android:textStyle="normal" />   
            	    
            </LinearLayout>
            
			<LinearLayout
            	android:id="@+id/contact_section"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:layout_margin="5dp"
            	android:background="@android:color/white"
            	android:orientation="vertical" >
            
                <TextView
                	android:id="@+id/contact_text"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_margin="5dp"
		            android:text="Contactar Anunciante"
		            android:textColor="@color/SteelBlue"
		            android:textStyle="bold" />
                
                <View android:layout_height="1dp"
				        android:layout_width="match_parent"
				        android:background="#90909090"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="5dp"
				        android:layout_marginLeft="2dp"
				        android:layout_marginRight="10dp"
				        android:id="@+id/separator5" />
                
                <LinearLayout
            	android:id="@+id/contact_buttons"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:gravity="center"
            	android:layout_margin="5dp"
            	android:orientation="horizontal" >
            
               <com.beardedhen.androidbootstrap.BootstrapButton
                   android:id="@+id/mailButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   bootstrapbutton:bb_icon_left="fa-envelope"
                   bootstrapbutton:bb_roundedCorners="true"
                   bootstrapbutton:bb_size="large"
                   bootstrapbutton:bb_type="info" >
               </com.beardedhen.androidbootstrap.BootstrapButton>


                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/callButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    bootstrapbutton:bb_roundedCorners="true"
                	bootstrapbutton:bb_size="large"
                	bootstrapbutton:bb_icon_left="fa-phone"
                	bootstrapbutton:bb_type="success" />
                </LinearLayout>
                </LinearLayout>
 	</LinearLayout>
 	</ScrollView>
</FrameLayout>