<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/pager"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/main_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion_principal"
                android:layout_alignParentLeft="true"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textColor="@color/SteelBlue"
                android:layout_alignParentRight="true"
                android:textStyle="bold" />
                      
             <TextView
                 android:id="@+id/sec_text"
                 android:layout_width="wrap_content"
                 android:layout_height="25dp"
                 android:layout_below="@id/main_desc"
                 android:text="Secondary Text"
                 android:textSize="14sp"
                 android:textStyle="bold" />
             
            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="superficie"
                android:layout_below="@id/sec_text"
                android:textStyle="normal" />
                                         
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:text="antiguedad"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age"
                android:text="expensas"
                android:textStyle="normal" />  
                    
           <ImageButton
                android:id="@+id/locationMapSnapshot"
                android:layout_width="match_parent"
                android:layout_below="@id/expenses"
                android:layout_height="150dp" />
            

			<Button
	        	android:id="@+id/contact"
	        	style="?android:attr/buttonStyleSmall"
	        	android:layout_width="match_parent"
	       	 	android:layout_height="wrap_content"
	        	android:layout_below="@+id/locationMapSnapshot"
	        	android:layout_centerHorizontal="true"
	        	android:layout_alignParentLeft="true"
	        	android:text="Contactar" />
        	
        	
            <RelativeLayout
                android:id="@+id/contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/contact"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/callButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="47dp"
                    android:contentDescription="Llamar Anunciante"
                    android:src="@drawable/icon_call1" />

                <ImageButton
                    android:id="@+id/mailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="28dp"
                    android:contentDescription="Enviar Mail"
                    android:src="@drawable/icon_mail" />
            </RelativeLayout>
 	</RelativeLayout>
</RelativeLayout>