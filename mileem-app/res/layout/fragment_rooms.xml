<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/bb_1room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="1"
        bootstrapbutton:bb_icon_left="fa-circle-o"
        bootstrapbutton:bb_roundedCorners="true"
        bootstrapbutton:bb_type="warning" >
    </com.beardedhen.androidbootstrap.BootstrapButton>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_4room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bb_3room"
            android:layout_alignTop="@+id/bb_3room"
            android:text="4+"
            bootstrapbutton:bb_icon_left="fa-circle-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="warning" >
        </com.beardedhen.androidbootstrap.BootstrapButton>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_2room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bb_1room"
            android:layout_centerVertical="true"
            android:text="2"
            bootstrapbutton:bb_icon_left="fa-circle-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="warning" >
        </com.beardedhen.androidbootstrap.BootstrapButton>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_3room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bb_2room"
            android:layout_toRightOf="@+id/bb_2room"
            android:text="3"
            bootstrapbutton:bb_icon_left="fa-circle-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="warning" >
        </com.beardedhen.androidbootstrap.BootstrapButton>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/bb_allrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bb_4room"
            android:layout_toRightOf="@+id/bb_4room"
            android:text="Todas"
            bootstrapbutton:bb_icon_left="fa-circle-o"
            bootstrapbutton:bb_roundedCorners="true"
            bootstrapbutton:bb_type="warning" >
        </com.beardedhen.androidbootstrap.BootstrapButton>

</RelativeLayout>