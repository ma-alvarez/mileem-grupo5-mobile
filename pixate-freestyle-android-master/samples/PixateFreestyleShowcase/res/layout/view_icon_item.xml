<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/icons_grid_item_width"
    android:layout_height="@dimen/icons_grid_item_width"
    android:layout_marginBottom="@dimen/icons_grid_item_margin"
    android:orientation="vertical"
    android:gravity="center" >

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="@dimen/icons_grid_icon_width"
        android:layout_height="@dimen/icons_grid_icon_height"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_adjust" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icons_grid_icon_text_margin"
        android:singleLine="true"
        android:gravity="center"
        android:text="icon_align_left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/icons_grid_item_text" />

</LinearLayout>